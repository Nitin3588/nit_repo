<! DOCTYPE html>


<head>

<%@ include file="/WEB-INF/templates/header.jsp" %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>


<style>
.p-0 {
	padding: 0 !important;
}

.auth-form {
	margin: 0 auto;
	width: 340px;
}

.px-3 {
	padding-right: 16px !important;
}

.pl-3, .px-3 {
	padding-left: 16px !important;
}

form {
	display: block;
	margin-top: 0em;
}

.auth-form-body {
	background-color: #fff;
	border: 1px solid #d8dee2;
	border-radius: 0 0 3px 3px;
	border-top: 0;
	font-size: 14px;
	padding: 20px;
}

.mt-3 {
	margin-top: 16px !important;
}

label {
	cursor: default;
}

label {
	font-weight: 600;
}

* {
	box-sizing: border-box;
}

div {
	display: block;
}

body {
	background-color: #fff;
	color: #24292e;
	font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica,
		Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji, Segoe UI Symbol;
	font-size: 14px;
	line-height: 1.5;
}

.auth-form-body {
	border-radius: 5px;
	border-top: 1px solid #d8dee2;
}

.btn-block {
	display: block;
	text-align: center;
	width: 100%;
}

.btn-primary {
	background-color: #28a745;
	background-image: linear-gradient(-180deg, #34d058, #28a745 90%);
	color: #fff;
}

.btn {
	background-color: #eff3f6;
	background-image: linear-gradient(-180deg, #fafbfc, #eff3f6 90%);
	color: #24292e;
}

.btn {
	appearance: none;
	background-position: -1px -1px;
	background-repeat: repeat-x;
	background-size: 110% 110%;
	border: 1px solid rgba(27, 31, 35, .2);
	border-radius: .25em;
	cursor: pointer;
	display: inline-block;
	font-size: 14px;
	font-weight: 600;
	line-height: 20px;
	padding: 6px 12px;
	position: relative;
	user-select: none;
	vertical-align: middle;
	white-space: nowrap;
}

.form-control, .form-select {
	background-color: #fff;
	background-position: right 8px center;
	background-repeat: no-repeat;
	border: 1px solid #d1d5da;
	border-radius: 3px;
	box-shadow: inset 0 1px 2px rgba(27, 31, 35, .075);
	color: #24292e;
	font-size: 16px;
	line-height: 20px;
	min-height: 34px;
	outline: none;
	padding: 6px 8px;
	vertical-align: middle;
}

button, input, select, textarea {
	font-family: inherit;
	font-size: inherit;
	line-height: inherit;
}

.create-account-callout {
	border: 1px solid black;
	border-radius: 5px;
	padding: 15px 20px;
	text-align: center;
}

.auth-form-header {
	background-color: #829aa8;
	border: 1px solid #768995;
	border-radius: 3px 3px 0 0;
	color: #fff;
	margin: 0;
	padding: 10px 20px;
	text-shadow: 0 -1px 0 rgba(0, 0, 0, .3);
	margin-top: 80px;
}

.p-0 {
	padding: 0 !important;
}

.auth-form label {
	display: block;
	margin-bottom: 7px;
}

.input-block {
	display: block;
	width: 100%;
}

.auth-form-body .input-block {
	margin-bottom: 15px;
	margin-top: 5px;
}

.label-link {
	float: right;
	font-size: 12px;
}

body {
	background-color: lightgray;
}
</style>
</head>
<html>
<body>
	<div class="auth-form px3">
		<div style="color: red">${error}</div>
		<form:form id="loginForm" name="loginForm" action="" method="POST" commandName="login">

			<div class="auth-form-header p-0">
				<h4 style="text-align: center">Sign in to Driver Connect</h4>
			</div>

			<div class="auth-form-body mt-3">

				<label for="login_field"> UserId <a class="label-link"
					href="/password_reset">Forgot password?</a>
				</label>

				<form:input type="text" path="firstName" id="login_field"
					class="form-control input-block" tabindex="1" autocapitalize="off"
					autocorrect="off" autofocus="autofocus" />

				<label for="password"> Password </label>
				<form:input type="password" path="password" id="password"
					class="form-control form-control input-block" tabindex="2" />

				<input type="submit" name="commit" value="Sign in" tabindex="3"
					class="btn btn-primary btn-block">
			</div>

			<p class="create-account-callout mt-3">
				New to Driver Connect <a href="register">Create an account</a>.
			</p>
		</form:form>
	</div>
</body>
</html>


<script>
$(document).ready(function() {

	$("#loginForm").validate({
	  rules: {
		  login_field:{
			  required: true,
		  },
          password: {
	   	         required: true,
		  }
	  },
	  messages: {
		  login_field:{
			  required: "This field is required",
		  },
		  password: {
	   	         required: "This field is required",
			   	 }
	  },
	});});


</script>